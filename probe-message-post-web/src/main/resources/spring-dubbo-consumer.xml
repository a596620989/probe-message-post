<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
	default-autowire="byName">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="probe-message"/>
 
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="${dubbo.registry.address}"/>
 
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${dubbo.protocol.port}"/>
    
	<dubbo:monitor protocol="registry"/>
	
	<dubbo:consumer version="1.0" group="default" cluster="failfast"/>

	<dubbo:reference id="remotePostRouterService" interface="com.witown.remoting.service.RemotePostRouterService" />
	<dubbo:reference id="remoteRouterService" interface="com.witown.portal.service.RemoteRouterService"/>
</beans>

